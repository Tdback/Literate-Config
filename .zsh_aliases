# Aliases called by ~/.zshrc

# Terminal
alias cp='cp -iv'
alias rm='rm -Idv'
alias mv='mv -v'
alias mkdir='mkdir -v'
alias rmdir='rmdir -v'

alias ll='ls -alF'
alias l1='ls -1F'
alias la='ls -AF'
alias l='ls -CF'

# Always print physical directory location
alias pwd='pwd -P'

# Ensure the right rename is used
alias prename='perl-rename'

# Make bat function like cat
alias bat='bat --paging=never'

# Always use -9 on file compression (except xz)
alias zip='zip -9v'
alias gzip='gzip -9v'
alias bzip2='bzip2 -9v'
alias xz='xz -v'

# Always use gpg2
alias gpg='gpg2'

# For showing off the system
alias neo='neofetch | lolcat'

# Python
alias py='/usr/bin/python3'
alias python='/usr/bin/python3'

# VIM
alias v='/usr/bin/nvim'
alias vi='/usr/bin/nvim'
alias vim='/usr/bin/nvim'
