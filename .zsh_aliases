# Aliases called by ~/.zshrc

# Terminal
alias cp='cp -iv'
alias rm='rm -Idv'
alias mv='mv -v'
alias mkdir='mkdir -v'
alias rmdir='rmdir -v'

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Ensure the right rename is used
alias prename='perl-rename'

# Make bat function like cat
alias bat='bat --paging=never'

# Always use -9 on file compression
alias zip='zip -9'
alias gzip='gzip -9'
alias bzip2='bzip2 -9'

# Python
alias py='/usr/bin/python3'
alias python='/usr/bin/python3'

# VIM
alias v='/usr/bin/nvim'
alias vi='/usr/bin/nvim'
alias vim='/usr/bin/nvim'
